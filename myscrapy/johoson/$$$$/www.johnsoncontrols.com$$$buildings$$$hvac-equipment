    jci.jQuery(function () {
        $back_to_top = jci.jQuery('.floating-contact-container');

        jci.jQuery(window).scroll(function () {
            (jci.jQuery(this).scrollTop() > 420) ? $back_to_top.addClass('is-visible') : $back_to_top.removeClass('is-visible fade-out');
        });

        jci.jQuery('.floating-contact-container').scrollTo();

        jci.contactUsLocationSearch.init(jci.jQuery('.contact-location-search'), "/location-finder");

        jci.jQuery('span.floating-contact-close').click(function () {
            jci.jQuery('div.floating-contact-container').toggleClass('fade-out');
        });

        jci.jQuery('span.floating-contact-btn').click(function () {
            jci.jQuery('div.floating-contact-container').toggleClass('fade-out');
        });

        // Create browser compatible event handler.
        var eventMethod = window.addEventListener ? "addEventListener" : "attachEvent";
        var eventer = window[eventMethod];
        var messageEvent = eventMethod == "attachEvent" ? "onmessage" : "message";
        // Listen for a message from the iframe.
        eventer(messageEvent, function (e) {
            if (isNaN(e.data)) return;

            // replace #sizetracker with what ever what ever iframe id you need
            document.getElementById('sizetracker').style.height = e.data + 'px';

        }, false);

    });
</script>
